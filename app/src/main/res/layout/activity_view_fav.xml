        <TextView
            android:id="@+id/tvApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/tvApellidos" />

        <TextView
            android:id="@+id/tvDni"
            android:layout_width="match_parent"
